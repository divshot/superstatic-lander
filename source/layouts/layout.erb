<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "normalize", "lander" %>
    <%= javascript_include_tag  "all" %>

    <script type="text/javascript" src="//use.typekit.net/lnw7qyq.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>
  
  <body class="<%= page_classes %>">
    <aside>
      <a href="/"><%= image_tag 'superstatic.svg', :width => '140', :class => 'logo' %></a>
    </aside>
    <main>
      <header>
        <div class="github">
          <a href="https://github.com/divshot/superstatic" target="_blank">Star on <b>GitHub</b> <%= image_tag 'github.svg', :width => '20' %></a>
        </div>
      </header>
      <article>
        <%= yield %>
      </article>
      <footer>
        <p>Powered by <a href="http://www.divshot.com" title="Static Web Hosting for Developers" target="_blank">Divshot</a></p>
      </footer>
    </main>
  </body>
</html>